<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/activity_contact_list_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_list_contact_createContact"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_list_contact_createContact"
        android:layout_width="387dp"
        android:layout_height="84dp"
        android:layout_weight="1"
        android:onClick="createContact"
        android:text="@string/create_contact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_list_contact_researchText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/search_for_a_contact"
        android:textSize="45sp"
        app:layout_constraintEnd_toStartOf="@+id/activity_contact_list_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_list_contact_researchField"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="@string/contact_name"
        android:textSize="45sp"
        app:layout_constraintEnd_toStartOf="@+id/activity_contact_list_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_list_contact_researchText" />

</androidx.constraintlayout.widget.ConstraintLayout>